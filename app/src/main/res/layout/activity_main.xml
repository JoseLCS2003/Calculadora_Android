<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <EditText
        android:id="@+id/text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="50sp"
        android:textAlignment="viewEnd"
        android:layout_marginTop="50dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <TextView
        android:id="@+id/res"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="40dp"

        android:textAlignment="viewEnd"
        android:text="0"
        app:layout_constraintTop_toBottomOf="@id/text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        />

    <Button
        android:id="@+id/divi"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="/"
        android:textSize="30dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/res"
        app:cornerRadius="100dp"
        app:layout_constraintStart_toEndOf="@id/borrarU"
        app:layout_constraintBottom_toTopOf="@id/mul"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/borrarU"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="â†"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        app:layout_constraintTop_toBottomOf="@id/res"
        app:layout_constraintStart_toEndOf="@id/borrarT"
        app:layout_constraintBottom_toTopOf="@id/num2"
        app:layout_constraintEnd_toStartOf="@id/divi"

        />

    <Button
        android:id="@+id/borrarT"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="AC"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="10dp"
        app:layout_constraintTop_toBottomOf="@id/res"
        app:layout_constraintBottom_toTopOf="@id/num1"
        app:layout_constraintEnd_toStartOf="@id/borrarU"
        app:layout_constraintStart_toStartOf="parent" />
    <Button
        android:id="@+id/num1"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="1"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/borrarT"
        app:layout_constraintEnd_toStartOf="@id/num2"
        app:layout_constraintBottom_toTopOf="@id/num4"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/num2"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="2"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/borrarU"
        app:layout_constraintEnd_toStartOf="@id/num3"
        app:layout_constraintBottom_toTopOf="@id/num5"
        app:layout_constraintStart_toEndOf="@id/num1"
        />
    <Button
        android:id="@+id/num3"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="3"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/borrarU"
        app:layout_constraintEnd_toStartOf="@id/mul"
        app:layout_constraintBottom_toTopOf="@id/num6"
        app:layout_constraintStart_toEndOf="@id/num2"
        />
    <Button
        android:id="@+id/mul"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="X"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/divi"
        app:layout_constraintBottom_toTopOf="@id/resta"
        app:layout_constraintStart_toEndOf="@id/num3"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/num4"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="4"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num1"
        app:layout_constraintEnd_toStartOf="@id/num5"
        app:layout_constraintBottom_toTopOf="@id/num7"
        app:layout_constraintStart_toStartOf="parent"
        />
    <Button
        android:id="@+id/num5"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="5"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num2"
        app:layout_constraintEnd_toStartOf="@id/num6"
        app:layout_constraintBottom_toTopOf="@id/num8"
        app:layout_constraintStart_toEndOf="@id/num4"
        />
    <Button
        android:id="@+id/num6"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="6"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num3"
        app:layout_constraintEnd_toStartOf="@id/resta"
        app:layout_constraintBottom_toTopOf="@id/num9"
        app:layout_constraintStart_toEndOf="@id/num5"
        />
    <Button
        android:id="@+id/resta"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:text="-"
        android:textSize="30dp"
        app:cornerRadius="100dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/mul"
        app:layout_constraintBottom_toTopOf="@id/suma"
        app:layout_constraintStart_toEndOf="@id/num6"
        app:layout_constraintEnd_toEndOf="parent"
        />
    <Button
        android:id="@+id/num7"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num4"
        app:layout_constraintBottom_toTopOf="@id/num0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/num8"
        android:text="7"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/num8"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num5"
        app:layout_constraintBottom_toTopOf="@id/punto"
        app:layout_constraintStart_toEndOf="@id/num7"
        app:layout_constraintEnd_toStartOf="@id/num9"
        android:text="8"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/num9"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num6"
        app:layout_constraintBottom_toTopOf="@id/igaul"
        app:layout_constraintStart_toEndOf="@id/num8"
        app:layout_constraintEnd_toStartOf="@id/suma"
        android:text="9"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/suma"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintTop_toBottomOf="@id/resta"
        app:layout_constraintBottom_toTopOf="@id/igaul"
        app:layout_constraintStart_toEndOf="@id/num9"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="+"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/num0"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"

        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/punto"
        android:text="0"
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/punto"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:layout_marginBottom="10dp"

        android:backgroundTint="@color/blue"
        app:layout_constraintTop_toBottomOf="@id/num8"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/num0"
        app:layout_constraintEnd_toStartOf="@id/igaul"
        android:text="."
        android:textSize="30dp"
        />
    <Button
        android:id="@+id/igaul"
        android:layout_width="0dp"
        android:layout_height="100dp"
        app:cornerRadius="100dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintTop_toBottomOf="@id/suma"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/punto"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="="
        android:textSize="30dp"
        />



</androidx.constraintlayout.widget.ConstraintLayout>